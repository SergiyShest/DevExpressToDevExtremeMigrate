@using System.Web.UI.WebControls
@using Sasha.Lims.WebUI.Localization

@using (Html.BeginForm("CheckOut", "Samples", new { editMode = ViewBag.EditMode }, FormMethod.Post))
{
	@Html.DevExpress().FormLayout(s =>
{
	s.Name = "CheckoutPanel";
	s.Width = Unit.Percentage(100);
	s.Items.Add(i =>
	{
		i.ShowCaption = DefaultBoolean.False;
		i.Name = "grpCheckout";
		i.SetNestedContent(() =>
		{
			Html.DevExpress().Button(
				buttonSettings =>
				{
					buttonSettings.Name = "btnCheckout";
					buttonSettings.ControlStyle.CssClass = "button";
					buttonSettings.Width = 80;
					buttonSettings.Text = Html.GetLocalizedCommonText("ButtonCheckOut");
					buttonSettings.UseSubmitBehavior = true;
				}
			).Render();
		});
	});
}).GetHtml();
}